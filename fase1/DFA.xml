<?xml version="1.0" ?>
<!-- based on example 2.18 on page 73 -->

<AUTOMATON>
	<ALPHABET>
		<SYMBOL>a</SYMBOL>
		<SYMBOL>b</SYMBOL>
	</ALPHABET>
	
	<STATES>
		<STATE name = "A" start="true"></STATE>
		<STATE name = "B"></STATE>
		<STATE name = "C" end="true"></STATE>
		<STATE name = "D"></STATE>
	</STATES>
	
	<TRANSITIONS>
		<TRANSITION from="A" symbol="b" to="A"></TRANSITION>
		<TRANSITION from="A" symbol="a" to="B"></TRANSITION>
		<TRANSITION from="B" symbol="b" to="B"></TRANSITION>
		<TRANSITION from="B" symbol="a" to="C"></TRANSITION>
		<TRANSITION from="C" symbol="b" to="C"></TRANSITION>
		<TRANSITION from="C" symbol="a" to="D"></TRANSITION>
		<TRANSITION from="D" symbol="b" to="D"></TRANSITION>
		<TRANSITION from="D" symbol="a" to="D"></TRANSITION>
	</TRANSITIONS>
</AUTOMATON>
