<?xml version="1.0" ?>
<!-- based on example 2.18 on page 73 -->

<AUTOMATON name = "Binary decimal numbers">
	<ALPHABET>
		<SYMBOL>a</SYMBOL>
		<SYMBOL>b</SYMBOL>
	</ALPHABET>
	
	<STATES>
		<STATE name = "q0" start="true"></STATE>
		<STATE name = "q1"></STATE>
		<STATE name = "q2"></STATE>
		<STATE name = "q3"></STATE>
		<STATE name = "q4"></STATE>
		<STATE name = "q5"></STATE>
	</STATES>
	
	<TRANSITIONS>
		<TRANSITION from="q0" symbol="eps" to="q1"></TRANSITION>
		<TRANSITION from="q1" symbol="a" to="q2"></TRANSITION>
		<TRANSITION from="q2" symbol="eps" to="q3"></TRANSITION>
		<TRANSITION from="q3" symbol="b" to="q4"></TRANSITION>
		<TRANSITION from="q4" symbol="a" to="q0"></TRANSITION>
	</TRANSITIONS>
</AUTOMATON>
